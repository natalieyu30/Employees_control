<Page
    x:Class="PayRoll.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PayRoll"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    
    <Grid>
        <Button x:Name="btnSubmit" Content="Submit" Height="40" Margin="457,36,0,0" VerticalAlignment="Top" Width="203" RenderTransformOrigin="0.179,0.956" Click="Submit_Click">
            <Button.BorderBrush>
                <AcrylicBrush/>
            </Button.BorderBrush>
        </Button>
        <ComboBox x:Name="cboEmployee" Height="40" Margin="75,36,0,0" Width="330" SelectionChanged="cboEmployee_SelectionChanged"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="565" Margin="75,105,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="585" IsReadOnly="True" FontSize="16" BorderBrush="{ThemeResource SystemChromeBlackHighColor}"/>
        

    </Grid>
</Page>
